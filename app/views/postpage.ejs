<!DOCTYPE html>
<html>
	<head><title>Autocomplete input loaded as map</title>
	<!-- =============== Page Head content starts here ================= -->
						<% include partials/template/head.ejs %>
	<!-- =============== PageHeadcontent ends ===========================-->
	</head>
	<body>
			<!-- =============== Navigition bar starts here ==================== -->
						<% include partials/template/navbar.ejs %>
	<!-- =============== Navbar ends ====================================-->
<br><br><br>

	<div class="container" style="margin-top:50px">

		<div class="row">
			<div class="col-sm-4">
				<form id="quickForm" action="/postpage" method="post">
					<div class="form-group">
						<label for="email">Email address:</label>
						<input type="email" class="form-control" id="email" name="email">
					</div>
					<div class="form-group">
						<label for="pwd">Address:</label>
						<input type="text" class="form-control" id="address" name="address">
					</div>
					<div class="checkbox">
						<label><input id="ready" type="checkbox" name="ready"> I am ready</label>
					</div>
					<button type="submit" class="btn btn-default">Submit</button>
				</form>
			</div>
			<div class="col-sm-8">
				<h2>Post data display</h2>
				<div class="display-post">
				</div>
			</div>
		</div>
	</div>

		<br><br><br><br><br><br>
		

	<!--=============== Footer starts here ============================ -->
						<% include partials/template/footer.ejs %>
	<!--=============== Footer Ends =================================== -->
	<!--=============== Scriptpath starts here ======================== -->
						<% include partials/template/scriptpath.ejs %>
	<!--=============== Scriptpath Ends =================================== -->
	
<script>
	$("#quickForm").submit(function(event){
		event.preventDefault();

			 	$.post('postpage', {
	 		name: $('#email').val(),
	 		title: $('#address').val(),
	 		message: $('#ready').val()
			});
	 });


</script>
	</body>
</html>